doctype html
html
  head
    meta(charset='utf-8')
    title Emoji Master!

    style.
      .good { color: #6aa84f; }
      .bad { color: red; }
      .big { font-size: larger; }
      .taco { margin: 1em auto; }
      .first { background-color: gold }
      .second { background-color: silver }
      .third { background-color: #CD7F32 }
      h1 {
        text-align: center;
        font-family: sans-serif;
        font-size: 2rem;
      }
      .leaderboard {
        text-align: center;
        font-family: sans-serif;
        width: 50%;
        margin: auto;
      }
      .row {
        border-radius: 10px;
        border: solid 1px;
        margin: 7px auto;
      }
      .row p {
        margin: 0.1rem;
      }
      .first p:first-child { font-size: 1.5rem; }
      .second p:first-child { font-size: 1.4rem; }
      .third p:first-child { font-size: 1.3rem; }
      
    body
    if error
      h1.taco.big.bad Whoa! There's an error somewhere:
      pre.bad= error.stack
    else
      h1 Emoji Master Leaderboard (#general)
      .leaderboard
        each val, index in leaderboard
          if index == 0
            .row.first
              p='üçî ' + val.name
              p=val.score + ' points'
          else if index == 1
            .row.second
              p='üçü' + val.name
              p=val.score + ' points'
          else if index == 2
            .row.third
              p='ü•§' + val.name
              p=val.score + ' points'
          else
            .row.other
              p=val.name
              p=val.score + ' points'
